/* pages/write/write.wxss */

.container  {padding-bottom:4rem;padding-top:3rem;}
.container  .header {height:3rem;position:fixed;z-index:1;top:0;left:0;width:100%;background-color:#fff;border-bottom:1px solid #eee;box-sizing:border-box;display:flex;justify-content:center;}
.container  .nav {display:flex;font-size:1.1rem;position:relative;width:100%;justify-content:center;}
.container  navigator {display:flex;width:4rem;justify-content:center;margin:0 .5rem;position:relative;box-sizing:border-box;}
.container  navigator text {display:flex;justify-content:center;flex:1;align-items:center;color:#777;font-size:.9rem;transition:.2s;}
.container  navigator.on text {font-weight:bold;color:#000;font-size:1.25rem;}
.container  navigator.on::after {content:'';background-color:#d43030;display:block;height:2px;width:100%;position:absolute;bottom:-1px;}
.container  .nav .submit  {position:absolute;display:flex;align-items:center;justify-content:center;right:0;top:0;width:4rem;height:100%;}
.container  .nav .submit  text {font-size:1rem;color:#d43030;}

.swiper {height:calc(100vh - 7rem);overflow-y:scroll;}
.swiper swiper-item {overflow-y:scroll;}